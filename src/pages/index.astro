---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/hero-img.png";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import featureImage from "@images/feature-img.png";
import featureImage2 from "@images/feature-img2.png";
import construction from "@images/dash-orgullo.png";
import tools from "@images/dash-calidad.png";
import dashboard from "@images/dash-artesano.png";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>

  <HeroSection
    title=`Descubre el Sabor de lo Auténtico con  <span
        class="text-yellow-500 dark:text-yellow-400"> Equatorial</span>`
    subTitle="Transformamos los aromas y sabores de las frutas tropicales en vinos y licores únicos, orgullosamente ecuatorianos."
    primaryBtn="Explorar Productos"
    primaryBtnURL="#"
    secondaryBtn="Contáctanos"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`Más de <span class="font-bold">1k</span> Reseñas`
    src={heroImage}
    alt="Botellas de vino y licores artesanales de Equatorial exhibidas elegantemente"
  />

  <ClientsSection
    title="Nuestras Marcas"
    subTitle="Experimenta la confiabilidad elegida por grandes y pequeñas empresas."
  />

  <FeaturesGeneral
    title="Nuestros Productos"
    subTitle="Experimenta la confiabilidad elegida por grandes industrias."
    img1={featureImage}
    img2={featureImage2}
    alt="Botellas de vino y licores artesanales de Equatorial exhibidas elegantemente"
    features={features}
  />

  <FeaturesNavs
    title=`Descubre la Excelencia de <span class="text-yellow-500 dark:text-yellow-400">Equatorial</span> en cada producto artesanal`
    tabs={[
      {
        heading: "Calidad Superior",
        content:
          "Nuestros productos son elaborados con los más altos estándares de calidad, utilizando frutas tropicales cuidadosamente seleccionadas de la región de Ibarra, Ecuador.",
        svg: "tools",
        src: tools,
        alt: "Proceso de elaboración artesanal de vinos y licores",
        first: true,
      },
      {
        heading: "Mano de Obra Artesanal",
        content:
          "Cada botella refleja la dedicación de nuestros artesanos ibarreños, quienes combinan técnicas tradicionales con innovación para crear productos excepcionales.",
        svg: "dashboard",
        src: dashboard,
        alt: "Artesanos trabajando en la elaboración de vinos y licores",
        second: true,
      },
      {
        heading: "Orgullo Ecuatoriano",
        content:
          "Elaborado con pasión en Ibarra, Ecuador, cada producto representa nuestra rica herencia cultural y el compromiso con la excelencia en la industria vinícola y licorera.",
        svg: "house",
        src: construction,
        alt: "Instalaciones de producción en Ibarra, Ecuador",
      },
    ]}
  />

  <FAQ title="Preguntas<br />frecuentes" faqs={faqs} />

  
</MainLayout>
